<h2 class="font-medium text-xl mt-3 text-center">Log In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'mt-6') do |f| %>
  <div class="my-5 text-sm">
    <%= f.label :email %>
    <%= f.email_field_with_errors :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="my-5 text-sm">
    <%= f.label :password %><br />
    <%= f.password_field_with_errors :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="my-5 text-sm">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="my-5 text-sm">
    <%= f.submit "Log in", class: 'button button--primary button--block' %>
  </div>
<% end %>

<div class="flex flex-col items-center">
  <%= render "devise/shared/links" %>
</div>
