<h2 class="font-medium text-xl mt-3 text-center">Sign Up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mt-6') do |f| %>
  <div class="my-5 text-sm">
    <%= f.label 'Full Name' %>
    <%= f.text_field_with_errors :name, autofocus: true %>
  </div>

  <div class="my-5 text-sm">
    <%= f.label :email %>
    <%= f.email_field_with_errors :email, autocomplete: 'email' %>
  </div>

  <div class="my-5 text-sm">
    <%= f.label :password %>
    <%= f.password_field_with_errors :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <span class="text-xs italic">(<%= @minimum_password_length %> characters minimum)</span>
    <% end %>
  </div>

  <div class="my-5 text-sm">
    <%= f.label :password_confirmation %>
    <%= f.password_field_with_errors :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="my-5 text-sm">
    <%= f.submit "Sign up", class: 'button button--primary button--block' %>
  </div>
<% end %>

<div class="flex justify-center">
  <%= render "devise/shared/links" %>
</div>
