<div class="sidebar">
  <div class="sidebar__logo">
    <a href="/" class="logo hidden md:block ml-3">Tweety</a>
    <a href="/" class="block md:hidden text-2xl"><i class="fas fa-kiwi-bird"></i></a>
  </div>
  <nav class="sidebar__nav">
    <div class="flex flex-col items-start">
      <%= link_to authenticated_root_path, class: "sidebar__nav__item #{current_path?(authenticated_root_path)}" do %>
        <i class="fas fa-home"></i>
        <span class="hidden md:inline-block ml-2">Home</span>
      <% end %>
      <a href="/" class="sidebar__nav__item">
        <i class="fas fa-hashtag"></i>
        <span class="hidden md:inline-block ml-2">Explore</span>
      </a>
      <a href="/" class="sidebar__nav__item">
        <i class="fas fa-bell"></i>
        <span class="hidden md:inline-block ml-2">Notifications</span>
      </a>
      <a href="/" class="sidebar__nav__item">
        <i class="fas fa-envelope"></i>
        <span class="hidden md:inline-block ml-2">Messages</span>
      </a>
      <a href="/" class="sidebar__nav__item">
        <i class="fas fa-bookmark"></i>
        <span class="hidden md:inline-block ml-2">Bookmarks</span>
      </a>
      <%= link_to edit_user_registration_path, class: 'sidebar__nav__item' do %>
        <i class="fas fa-user"></i>
        <span class="hidden md:inline-block ml-2">Profile</span>
      <% end %>
    </div>
    <div class="absolute left-0 bottom-0 right-0 p-5">
      <div class="flex flex-row items-center justify-center mb-5">
        <%= user_gravatar(current_user, '30') %>
        <span class="ml-2 hidden md:flex"><%= current_user.name.familiar %></span>
      </div>
      <%= link_to destroy_user_session_path, method: :delete, class: 'sidebar__nav__item' do %>
        <i class="fas fa-sign-out-alt"></i>
        <span class="hidden md:inline-block ml-2">Logout</span>
      <% end %>
      </div>
  </nav>
</div>
